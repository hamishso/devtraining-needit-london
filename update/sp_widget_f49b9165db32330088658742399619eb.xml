        <script><![CDATA[(function() {
	if (input){
		console.log('inside script ' + input.abn);
		data.items = getVendorRecord(input);
	}
	
	function getVendorRecord(inputObj) {
		var sc = new GlideRecord('x_58872_needit_ltu_master_vendor');
		console.log('query');
		sc.addActiveQuery();
		if(inputObj.abn != ''){
			sc.addQuery('abn_number', inputObj.abn);
		}else if (inputObj.trading_name != ''){
			sc.addQuery('trading_name', inputObj.trading_name);
		}else if (inputObj.vendor_id != ''){
			sc.addQuery('vendor_id', inputObj.vendor_id);
		}
		sc.setLimit(100);
		sc.orderByDesc("abn_number");
		sc.query();
		var results = [];
		while (sc.next()) {
			if (!$sp.canReadRecord(sc))
				continue;

			var item = {};
			$sp.getRecordDisplayValues(item, sc, 'abn_number,trading_name,vendor_id,sys_id');
			item.abn_number = sc.getValue('abn_number');
			results.push(item);
		}
		return results;
	}
})();

]]></script>
